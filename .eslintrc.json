{
    "plugins": ["jest", "@typescript-eslint"],
    "extends": ["plugin:github/recommended", "@architecture-it/andreani/ts"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "rules": {
      "i18n-text/no-en": "off",
      "filenames/match-regex": "off",
      "import/no-namespace": "off"
    },
    "env": {
      "node": true,
      "es6": true,
      "jest/globals": true
    }
  }